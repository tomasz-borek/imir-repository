<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

	<environment include="Development">
		<link rel="stylesheet" href="~/css/site.css" />
		<environment exclude="Development">
			<link rel="stylesheet" href="~/css/site.css" />
		</environment>
	</environment>

    
</head>
<body>
	<div class="navbar">
		<div class="navbar-link navbar-logo" href="#">
			<img src="~/images/logo_wimir_agh.png" />
		</div>
		<div class="navbar-toggle navbar-link">
			<img id="hamburger-menu" src="~/images/hamburger-menu.png" style="width:30px;height:100%;" />
		</div>
		<nav class="navbar-item navbar-items-left">
			<div class="navbar-link">
				<a asp-controller="Home" asp-action="Index">Strona Główna</a>
			</div>
			<div class="navbar-link">
				<a asp-controller="Resolution" asp-action="ShowAll">Repozytorium</a>
			</div>
			<div class="navbar-link">
				<a asp-controller="Home" asp-action="Contact">Kontakt</a>
			</div>
		</nav>
		<nav class="navbar-item navbar-items-right">
			<div class="navbar-link">
				<a href="http://imir.agh.edu.pl/">Strona Wydziału</a>
			</div>
		</nav>
	</div>
		@RenderBody()
<footer>
	<div class="footer">
		<div class="footer-items">
			@@Copyright - Tomasz Borek dla Wydziału Inżynierii Mechanicznej i Robotyki AGH
		</div>
		<div class="footer-items" id="clock"></div>
	</div>
</footer>

	<environment include="Development">
		<script src="~/js/site.js" asp-append-version="true"></script>
	</environment>
	<environment exclude="Development">
		<script src=""~/js/site.js" asp-append-version="true"></script>
	</environment>
</body>
</html>
